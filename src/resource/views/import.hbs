<h3 class="text-center">Hóa Đơn Nhập</h3>
<div class="container">
  {{#each importbill}}
    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <strong>Mã Hóa Đơn:</strong>
        {{this.import_order_id}}
      </div>
      <div class="card-body">
        <div class="row">
          <!-- Cột trái: Thông tin hóa đơn -->
          <div class="col-md-6">
            <div class="mb-3">
              <strong>Tên người đặt:</strong>
              {{this.manf_name}}<br />
              <strong>Số điện thoại:</strong>
              {{this.phone}}
            </div>
            <div class="mb-3">
              <strong>Địa chỉ:</strong>
              {{this.ip_address}}
            </div>
            <div class="mb-3">
              <strong>Tổng giá:</strong>
              {{this.import_order_total_price}}
              VNĐ
            </div>
            <div class="mt-3">
              <span><strong>Trạng thái:</strong> {{this.status}}</span>
            </div>
          </div>

          <!-- Cột phải: Danh sách sản phẩm -->
          <div class="col-md-6">
            <h5>Sản phẩm:</h5>
            <div class="d-flex flex-wrap">
              {{#each this.products}}
                <div class="product-item d-flex align-items-center mb-3" style="width: 100%;">
                  <img
                    src="/image/{{this.product_image}}"
                    alt="{{this.product_name}}"
                    class="img-thumbnail"
                    style="width: 60px; height: 60px; margin-right: 15px;"
                  />
                  <div>
                    <div><strong>{{this.product_name}}</strong></div>
                    <div>Thương hiệu: {{this.brand_name}}</div>
                    <div>Số lượng: {{this.import_quantity}}</div>
                    <div>Đơn giá: {{this.unit_price}} VNĐ/bộ</div>
                    <div>Tổng tiền: {{this.total_price}} VNĐ</div>
                  </div>
                </div>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-2 d-flex justify-content-end">
          <button class="btn btn-info btn-sm mr-2 mb-3" onclick="showImport({{json this.products}},{{json ../city}},{{json ../manufacture}},{{json this.id_address}},{{json this.import_order_id}})">Cập nhật</button>
          <button class="btn btn-danger btn-sm mb-3" onclick="DeleteimportData({{json this.import_order_id}})">Xóa</button>
        </div>
  {{else}}
    <div class="text-center">
      <img src="/image/image.png" alt="Không có hóa đơn" class="img-fluid" style="max-width: 50%; height: auto;" />
      <p class="mt-3">Không có hóa đơn nhập nào.</p>
    </div>
  {{/each}}
</div>

<a href="/homepage" class="btn btn-success float-right mt-3">Quay trang quản lí</a>
<div class="pay" id="pay"></div>
<script src="/js/import.js"></script>