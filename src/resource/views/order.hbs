{{#if hasOrders}}
  {{#if pendingOrders}}
    <h3 class="text-center">Hóa Đơn Đang Chờ</h3>
    <div class="container">
      {{#each pendingOrders}}
        <div class="card mb-4 shadow-sm">
          <div class="card-header">
            <strong>Mã Hóa Đơn:</strong>
            {{this.id_bill}}
          </div>
          <div class="card-body">
            <div class="row">
              <!-- Cột trái: Thông tin hóa đơn -->
              <div class="col-md-6">
                <div class="mb-3">
                  <strong>Tên người đặt:</strong>
                  {{this.user_name}}<br />
                  <strong>Số điện thoại:</strong>
                  {{this.address_phone}}
                </div>
                <div class="mb-3">
                  <strong>Địa chỉ:</strong>
                  {{this.ip_address}},
                  {{this.district_name}},
                  {{this.city_name}}
                </div>
                <div class="mb-3">
                  <strong>Ngày đặt:</strong>
                  {{formatDate this.create_at}}<br />
                  <strong>Tổng giá:</strong>
                  {{this.total_price}}
                  VNĐ
                </div>
                <div class="mt-3">
                  <span><strong>Trạng thái:</strong> {{this.status}}</span>
                </div>

              </div>

              <!-- Cột phải: Danh sách sản phẩm -->
              <div class="col-md-6">
                <h5>Sản phẩm:</h5>
                <div class="d-flex flex-wrap">
                  {{#each this.products}}
                    <div class="product-item d-flex align-items-center mb-3" style="width: 100%;">
                      <img
                        src="/image/{{firstImage this.image}}"
                        alt="{{this.product_name}}"
                        class="img-thumbnail"
                        style="width: 60px; height: 60px; margin-right: 15px;"
                      />
                      <div>
                        <div><strong>{{this.product_name}}</strong></div>
                        <div>Thương hiệu: {{this.brand_name}}</div>
                        <div>Số lượng: {{this.cart_quantity}}</div>
                      </div>
                    </div>
                  {{/each}}
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="mt-2 d-flex justify-content-end">
          <button class="btn btn-info btn-sm mr-2 mb-2" onclick="showPayment({{json ../citys}},{{json ../user_address}},{{json this.id_bill}})">Cập nhật</button>
          <button class="btn btn-danger btn-sm mb-2" onclick="DeleteBillData({{json this.id_bill}})">Xóa</button>
        </div>
      {{/each}}

    </div>
  {{/if}}

  {{#if confirmedOrders}}
    <h3 class="text-center">Hóa Đơn Đã Xác Nhận</h3>
    <div class="container">
      {{#each confirmedOrders}}
        <div class="card mb-4 shadow-sm">
          <div class="card-header">
            <strong>Mã Hóa Đơn:</strong>
            {{this.id_bill}}
          </div>
          <div class="card-body">
            <div class="row">
              <!-- Cột trái: Thông tin hóa đơn -->
              <div class="col-md-6">
                <div class="mb-3">
                  <strong>Tên người đặt:</strong>
                  {{this.user_name}}<br />
                  <strong>Số điện thoại:</strong>
                  {{this.address_phone}}
                </div>
                <div class="mb-3">
                  <strong>Địa chỉ:</strong>
                  {{this.ip_address}},
                  {{this.district_name}},
                  {{this.city_name}}
                </div>
                <div class="mb-3">
                  <strong>Ngày đặt:</strong>
                  {{formatDate this.create_at}}<br />
                  <strong>Tổng giá:</strong>
                  {{this.total_price}}
                  VNĐ
                </div>
              </div>

              <!-- Cột phải: Danh sách sản phẩm -->
              <div class="col-md-6">
                <h5>Sản phẩm:</h5>
                <div class="d-flex flex-wrap">
                  {{#each this.products}}
                    <div class="product-item d-flex align-items-center mb-3" style="width: 100%;">
                      <img
                        src="/image/{{firstImage this.image}}"
                        alt="{{this.product_name}}"
                        class="img-thumbnail"
                        style="width: 60px; height: 60px; margin-right: 15px;"
                      />
                      <div>
                        <div><strong>{{this.product_name}}</strong></div>
                        <div>Thương hiệu: {{this.brand_name}}</div>
                        <div>Số lượng: {{this.cart_quantity}}</div>
                      </div>
                    </div>
                  {{/each}}
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
{{else}}
  <div class="text-center">
    <img src="/image/image.png" alt="Không có hóa đơn" class="img-fluid" style="max-width: 50%; height: auto;" />
  </div>
{{/if}}
<a href="/cart" class="btn btn-success float-right mt-3">Quay lại giỏ hàng</a>
<div class="pay" id="pay"></div>
<script src="/js/order.js"></script>