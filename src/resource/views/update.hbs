<form
  class='form'
  action='/homepage/update/{{product.id_product}}'
  method='post'
  enctype='multipart/form-data'
>
  <div class='more'>
    <div class='mb-3' style='padding-top: 50px; width:100%'>
      <label for='Product name' class='form-label'>Product name</label>
      <input
        type='text'
        class='form-control name'
        name='name'
        placeholder='unico'
        value='{{product.name}}'
      />
    </div>
    <div class='mb-3'>
      <label for='Description' class='form-label'>Description</label>
      <textarea
        class='form-control description'
        name='description'
        rows='3'
      >{{product.description}}</textarea>
    </div>
    <div class='mb-3 row' style='display: flex; justify-content:space-between; align-items: center;'>
      <div class='col-auto'>
        <label for='Price' class='form-label'>Price</label>
        <input
          type='text'
          class='form-control gia'
          name='price'
          value='{{product.price}}'
        />
      </div>
      <div class='col-auto'>
        <label class='form-label' for='Brand'>Brand</label>
        <select class='form-select brand' name='brand'>
          {{#each brands}}
            <option value='{{this.id_brand}}' {{#ifEquals this.id_brand ../product.id_brand}}selected{{/ifEquals}}>{{this.name}}</option>
          {{/each}}
        </select>
      </div>
      <div class='col-auto'>
        <label class='form-label' for='Type'>Type</label>
        <select class='form-select type' name='type'>
          {{#each productTypes}}
            <option value='{{this.id_type}}' {{#ifEquals this.id_type ../product.id_type}}selected{{/ifEquals}}>{{this.name}}</option>
          {{/each}}
        </select>
      </div>
      <div class='col-auto'>
        <label for='Image' class='form-label'>Image</label>
        <input class='image' type='file' name='image' onchange='previewImage(event)' multiple />
        <div class='preview'>
          {{#each (parseJSON product.image)}}
            <img src='/image/{{this}}' alt='Preview' style='max-width: 100px; max-height:90px; margin: 5px;' />
          {{/each}}
        </div>
      </div>
    </div>
    <div class='mb-3'>
      <a href='/homepage'>
        <button type='button' class='btn btn-success' style='float:right;'>Back HomePage</button>
      </a>
      <button type='submit' class='btn btn-success btn2' style='float:right;margin-right:30px'>Save</button>
    </div>
  </div>
</form>
<script src='/js/view.js'></script>
